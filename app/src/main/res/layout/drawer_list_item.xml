<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp">


    <ImageView
        android:id="@+id/icon"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/drawer_icon_width"
        android:layout_height="@dimen/drawer_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_action_home"
        android:layout_centerVertical="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="administrator"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:id="@+id/textAdmin"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/adminImage"
        android:layout_toRightOf="@+id/adminImage"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/adminImage" />


</LinearLayout>